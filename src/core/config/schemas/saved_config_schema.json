{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Saved Configuration",
  "description": "Schema for saving full configurations including shapers and data source reference.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "shapers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" }
        },
        "required": ["type"],
        "additionalProperties": true
      }
    },
    "csv_path": {
      "type": ["string", "null"]
    }
  },
  "required": ["name", "shapers"]
}
