{
  "mcpServers": {
    "ring5-workspace": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ],
      "env": {
        "READONLY": "false"
      },
      "capabilities": {
        "tools": true,
        "resources": true
      },
      "description": "Full access limited STRICTLY to the RING-5 project workspace."
    }
  },
  "security": {
    "allowedPaths": ["${workspaceFolder}"],
    "prohibitedOperations": [
      "git",
      "rm -rf",
      "sudo",
      "chmod",
      "chown",
      "pip install --break-system-packages",
      "pip3 install --break-system-packages",
      "apt-get",
      "yum"
    ],
    "mandatoryEnvironment": "docker-compose run --rm ring5-dev",
    "executionWrapper": "docker-compose run --rm ring5-dev",
    "requireDocker": true,
    "note": "AI is PHYSICALLY FORBIDDEN from host execution. All commands MUST be wrapped in 'docker-compose run --rm ring5-dev'. Directory access is locked to the workspace container."
  }
}
