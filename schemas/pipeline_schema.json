{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Configuration",
  "description": "Schema for saved RING-5 pipelines.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the pipeline"
    },
    "description": {
      "type": "string",
      "description": "Description of what this pipeline does"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "pipeline": {
      "type": "array",
      "description": "Ordered list of data shapers",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of shaper (e.g. columnSelector, filter, etc.)"
          }
        },
        "required": ["type"],
        "additionalProperties": true
      }
    }
  },
  "required": ["name", "pipeline"]
}
